// prisma/schema.prisma
datasource db {
  provider = "postgresql"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"] // <--- AJOUTE CETTE LIGNE
}

model User {
  id            String     @id @default(cuid())
  name          String
  email         String     @unique
  password      String?
  walletBalance Int        @default(1000)
  role          Role       @default(USER)
  bets          Bet[]
  items         UserItem[] 
  badges        Badge[]    
  createdAt     DateTime   @default(now())
  currentStreak Int        @default(0) 
  bestStreak    Int        @default(0)
}

model Course {
  id                 String       @id @default(cuid())
  subject            String       
  professor          String       
  scheduledStartTime DateTime     
  actualArrivalTime  DateTime?    
  status             CourseStatus @default(OPEN)
  bets               Bet[]
  totalPot           Int          @default(0)
}

enum CourseStatus {
  OPEN      
  LOCKED    
  FINISHED  
}

model Bet {
  id           String   @id @default(cuid())
  userId       String
  courseId     String
  guessedTime  DateTime
  amount       Int      @default(100)
  pointsEarned Int?     @default(0)
  appliedItem  String?  // <--- On stocke ici l'item utilisÃ© (VEST, WARRANT, etc.)
  user         User     @relation(fields: [userId], references: [id])
  course       Course   @relation(fields: [courseId], references: [id])
  createdAt    DateTime @default(now())

  @@unique([userId, courseId])
}

model UserItem {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  itemType  String   // "VEST", "MAGNIFIER", "WARRANT"
  quantity  Int      @default(0)
  createdAt DateTime @default(now())

  @@unique([userId, itemType])
}

model Badge {
  id          String   @id @default(cuid())
  type        String   // "SNIPER", "VETERAN", "MILLIONAIRE", "HOT_STREAK"
  unlockedAt  DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
}

enum Role {
  USER
  ADMIN
}